#!/bin/bash
# Quick push - just push to GitHub
# Usage: ./push

set -e

GREEN='\033[0;32m'
YELLOW='\033[1;33m'
RED='\033[0;31m'
NC='\033[0m'

echo -e "${YELLOW}ğŸ“¤ Pushing to GitHub...${NC}"
echo ""

# Check if we have commits to push
AHEAD=$(git rev-list --count origin/main..HEAD 2>/dev/null || echo "0")

if [ "$AHEAD" -eq 0 ]; then
    echo -e "${GREEN}âœ… Already up to date!${NC}"
    exit 0
fi

echo -e "${YELLOW}Pushing $AHEAD commit(s):${NC}"
git log origin/main..HEAD --oneline
echo ""

if git push origin main; then
    echo ""
    echo -e "${GREEN}âœ… Pushed successfully!${NC}"
    echo ""
    echo "ğŸš€ GitHub Actions deploying to Azure..."
    echo "ğŸ“Š Monitor: https://github.com/hugh949/Gait-Analysis/actions"
else
    echo ""
    echo -e "${RED}âŒ Push failed!${NC}"
    exit 1
fi
